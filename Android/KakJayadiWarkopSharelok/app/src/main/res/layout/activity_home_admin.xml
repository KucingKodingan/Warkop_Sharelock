<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.admin.HomeAdminActivity"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/buttonLogoutAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_logout"/>

    <TextView
        android:id="@+id/menuAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List Menu"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:background="@drawable/bg_list_admin"
        app:layout_constraintTop_toBottomOf="@+id/title"/>

    <TextView
        android:id="@+id/penjualanAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List Laporan Penjualan"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@drawable/bg_list_admin"
        app:layout_constraintTop_toBottomOf="@+id/menuAdmin"/>

    <TextView
        android:id="@+id/akunAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List Akun"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@drawable/bg_list_admin"
        app:layout_constraintTop_toBottomOf="@+id/penjualanAdmin"/>

</androidx.constraintlayout.widget.ConstraintLayout>