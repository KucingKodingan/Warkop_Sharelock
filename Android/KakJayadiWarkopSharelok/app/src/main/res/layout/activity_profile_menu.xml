<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProfileMenuActivity"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/btn_back_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:background="@drawable/bg_navbar_icon"
        android:elevation="5dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="15dp">

            <ImageView
                android:id="@+id/iv_gambar_profile_menu"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/cappucino_ice"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:elevation="5dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rincian_menu_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/iv_gambar_profile_menu"
                android:orientation="vertical"
                android:layout_marginTop="-10dp"
                android:background="@drawable/bg_profile_menu"
                android:elevation="1dp"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:paddingBottom="12dp">
                <TextView
                    android:id="@+id/tv_nama_menu_profile_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Menu"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <LinearLayout
                    android:id="@+id/ly_kategori_menu_profile_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_nama_menu_profile_menu"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Kategori        : "
                        android:textSize="16sp"
                        android:textColor="@color/gray"/>
                    <TextView
                        android:id="@+id/tv_kategori_menu_profile_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Kategorinya"
                        android:textSize="16sp"
                        android:textColor="@color/gray"
                        android:layout_marginLeft="3dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly_jenis_menu_profile_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/ly_kategori_menu_profile_menu"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Jenis Menu  : "
                        android:textSize="16sp"
                        android:textColor="@color/gray"/>
                    <TextView
                        android:id="@+id/tv_jenis_menu_profile_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Jenis Menu nya"
                        android:textSize="16sp"
                        android:textColor="@color/gray"
                        android:layout_marginLeft="3dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/ly_jenis_menu_profile_menu"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Harga            : "
                        android:textSize="16sp"
                        android:textColor="@color/gray"/>
                    <TextView
                        android:id="@+id/tv_harga_menu_profile_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Harganya"
                        android:textSize="16sp"
                        android:textColor="@color/gray"
                        android:layout_marginLeft="3dp"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/ly_hitung_pesanan_pelanggan_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/rincian_menu_profile"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:paddingBottom="40dp">
                <Button
                    android:id="@+id/btn_kurang_pesanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/tv_jumlah_pesanan_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
                <Button
                    android:id="@+id/btn_tambah_pesanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="20dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_pesan_menu_profile_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesan"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_coklat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>