<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/list_alert_dialog_nama_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginRight="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/list_alert_dialog_nama_menu"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/list_alert_dialog_jumlah_menu"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="12x"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginRight="7dp"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="left"/>
        <TextView
            android:id="@+id/list_alert_dialog_harga_menu"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Harga"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center"/>
        <TextView
            android:id="@+id/list_alert_dialog_total_harga_menu"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="total"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="right"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>